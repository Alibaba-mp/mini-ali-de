{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "alwaysStrict": true,
    "importHelpers": true,
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "outDir": "./lib",
    "sourceMap": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types", "../../node_modules/@types"],
    "declaration": true,
    "skipLibCheck": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
